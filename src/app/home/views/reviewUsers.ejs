<div class="govuk-width-container">
    <% if (locals.isApprover) { %>
        <div id="review-users-banner" class="notification notification-information" tabindex="-1" style="display:none">
            <p class="govuk-body"><b>We recommend reviewing your users and their permissions.</b><br><a id="review-users-banner-review-users" class="govuk-link-bold" href="/approvals/users">Review users</a></p>
        </div>
        <script>
            document.getElementById("review-users-banner-review-users").addEventListener("click", function() {
                setReviewUsersBannerLastSeen();
            });
        </script>
    <% } %>
</div>
