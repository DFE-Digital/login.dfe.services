<div class="govuk-width-container">
    <a href="search" class="govuk-back-link-bold">Back</a>

    <div class="govuk-grid-row">
        <div class="govuk-grid-column-two-thirds">
            <h1 class="govuk-heading-xl">
                Confirm request
            </h1>
            <p class="govuk-body-l">An email with your request will be sent to approvers at
                <%=locals.organisation.name%>.</p>

            <dl class="govuk-summary-list">

                <div class="govuk-summary-list__row">
                    <dt class="govuk-summary-list__key">
                        Organisation
                    </dt>
                    <dd class="govuk-summary-list__value">
                        <%= locals.organisation.name %>
                    </dd>
                </div>

                <% if (locals.organisation.address) { %>
                <div class="govuk-summary-list__row">
                    <dt class="govuk-summary-list__key">
                        Address
                    </dt>
                    <dd class="govuk-summary-list__value">
                        <%= locals.organisation.address %>
                    </dd>
                </div>
                <% } %>

                <% if (locals.organisation.category && locals.organisation.category.name) { %>
                <div class="govuk-summary-list__row">
                    <dt class="govuk-summary-list__key">
                        Category
                    </dt>
                    <dd class="govuk-summary-list__value">
                        <%= locals.organisation.category.name %>
                    </dd>
                </div>
                <% } %>

                <% if (locals.organisation.urn) { %>
                <div class="govuk-summary-list__row">
                    <dt class="govuk-summary-list__key">
                        URN
                    </dt>
                    <dd class="govuk-summary-list__value">
                        <%= locals.organisation.urn %>
                    </dd>
                </div>
                <% } %>

                <% if (locals.organisation.uid) { %>
                <div class="govuk-summary-list__row">
                    <dt class="govuk-summary-list__key">
                        UID
                    </dt>
                    <dd class="govuk-summary-list__value">
                        <%= locals.organisation.uid %>
                    </dd>
                </div>
                <% } %>

                <% if (locals.organisation.ukprn) { %>
                <div class="govuk-summary-list__row">
                    <dt class="govuk-summary-list__key">
                        UKPRN
                    </dt>
                    <dd class="govuk-summary-list__value">
                        <%= locals.organisation.ukprn%>
                    </dd>
                </div>
                <% } %>
            </dl>

            <form method="post" class="prevent-form-double-submission">
                <input type="hidden" name="_csrf" value="<%=csrfToken%>" />
                <input type="hidden" value="<%=locals.organisation.id%>" name="organisationId" />
                <input type="hidden" value="<%=locals.organisation.name%>" name="organisationName" />

                <div
                    class="govuk-form-group <%= (locals.validationMessages.reason !== undefined) ? 'govuk-form-group--error' : '' %>">
                    <label class="govuk-label" for="reason">
                        Give a reason why you need to be linked to the organisation, or the services you need (Optional)
                    </label>
                    <% if (locals.validationMessages.reason !== undefined) { %>
                    <span id="validation-message" class="govuk-error-message">
                        <span class="govuk-visually-hidden">Error:</span> <%=locals.validationMessages.reason %>
                    </span>
                    <% } %>
                    <textarea class="govuk-textarea govuk-!-width-full" id="reason" name="reason" maxlength="1000"
                        rows="6"></textarea>
                </div>

                <div class="govuk-button-group">
                    <button type="submit" class="govuk-button">Confirm</button>
                    <a href="/my-services" class="govuk-button govuk-button--secondary">Cancel</a>
                </div>

            </form>
        </div>
    </div>
</div>