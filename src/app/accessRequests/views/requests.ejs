<h1 class="heading-xlarge">Access requests</h1>

<div class="">
    <nav>
        <ul class="tabs" role="tablist">
            <li class="active">Organisations (<%=locals.usersForApproval.length%>)</li>
        </ul>
    </nav>
    <div class="pane">

        <% for(let i= 0; i < locals.usersForApproval.length; i++) {%>

        <div class="request">
            <p><a href="user-profile-access-request.html"><%=locals.usersForApproval[i].usersName%></a> has requested access to <b><%=locals.usersForApproval[i].org_name%></b>. <time datetime="<%=locals.usersForApproval[i].created_date%>"><%=moment(locals.usersForApproval[i].created_date).fromNow()%></time></p>
            <a href="#respond-<%=i%>" class="button-respond">Respond</a>
            <div class="respond js-hidden" id="respond-<%=i%>">
                <form>
                    <div class="form-group">
                        <fieldset class="inline">
                            <legend>
                                <h2 class="heading-small">Your response</h2>
                            </legend>
                            <div class="multiple-choice" data-target="panel-permissions-<%=i%>">
                                <input id="radio-inline-approve-<%=i%>" type="radio" name="radio-inline-group-<%=i%>-1" value="Approve">
                                <label for="radio-inline-approve-<%=i%>">Approve</label>
                            </div>
                            <div class="multiple-choice" data-target="panel-message-<%=i%>">
                                <input id="radio-inline-reject-<%=i%>" type="radio" name="radio-inline-group-<%=i%>-1" value="Reject">
                                <label for="radio-inline-reject-<%=i%>">Reject</label>
                            </div>
                        </fieldset>
                    </div>
                    <div class="pnl js-hidden" id="panel-permissions-<%=i%>">
                        <div class="form-group">
                            <fieldset class="inline">
                                <legend>
                                    <h2 class="heading-small">Permissions level</h2>
                                </legend>
                                <div class="multiple-choice">
                                    <input id="radio-inline-end-user-<%=i%>" type="radio" name="radio-inline-group-<%=i%>-2" value="End user">
                                    <label for="radio-inline-end-user-<%=i%>">End user</label>
                                </div>
                                <div class="multiple-choice">
                                    <input id="radio-inline-approver-<%=i%>" type="radio" name="radio-inline-group-<%=i%>-2" value="Approver">
                                    <label for="radio-inline-approver-<%=i%>">Approver</label>
                                </div>
                            </fieldset>
                        </div>
                    </div>
                    <div class="pnl js-hidden" id="panel-message-<%=i%>">
                        <div class="form-group">
                            <label for="message-<%=i%>">
                                <span class="form-text">Reason for rejecting (optional)</span>
                                <span class="form-hint">Any text you supply will be emailed to Shirley Robertson and stored in the audit </span>
                            </label>
                            <textarea rows="3" class="form-control" id="message-<%=i%>"></textarea>
                        </div>
                    </div>
                    <div class="form-group">
                        <button type="submit">Save</button>
                    </div>
                </form>
            </div>
        </div>
        <%}%>%>
    </div>

</div>
