<h1 class="heading-xlarge">Access requests</h1>

<div class="">
    <nav>
        <ul class="tabs" role="tablist">
            <li class="active">Organisations (<%=locals.usersForApproval.length%>)</li>
        </ul>
    </nav>
    <div class="pane">

        <%for(let i= 0; i < locals.usersForApproval.length; i++) {%>

        <div class="request">
            <p><a href="user-profile-access-request.html"><%=locals.usersForApproval[i].usersName%></a> has requested access to <b><%=locals.usersForApproval[i].org_name%></b>. <time datetime="<%=locals.usersForApproval[i].created_date%>"><%=moment(locals.usersForApproval[i].created_date).fromNow()%></time></p>
            <a href="" class="button-respond">Respond</a>
            <div class="respond js-hidden">
                <div class="form-group">
                    <fieldset class="inline">
                        <legend>
                            <h2 class="heading-small">
                                Your response
                            </h2>
                        </legend>
                        <div class="multiple-choice" data-target="panel-permissions-3">
                            <input id="radio-inline-9" type="radio" name="radio-inline-group-4" value="Approve">
                            <label for="radio-inline-9">Approve</label>
                        </div>
                        <div class="multiple-choice" data-target="panel-message-3">
                            <input id="radio-inline-10" type="radio" name="radio-inline-group-4" value="Reject">
                            <label for="radio-inline-10">Reject</label>
                        </div>
                    </fieldset>
                </div>
                <div class="pnl js-hidden" id="panel-permissions-3">
                    <div class="form-group">
                        <fieldset class="inline">
                            <legend>
                                <h2 class="heading-small">
                                    Permissions level
                                </h2>
                            </legend>
                            <div class="multiple-choice">
                                <input id="radio-inline-11" type="radio" name="radio-inline-group-5" value="End user">
                                <label for="radio-inline-11">End user</label>
                            </div>
                            <div class="multiple-choice">
                                <input id="radio-inline-12" type="radio" name="radio-inline-group-5" value="Approver">
                                <label for="radio-inline-12">Approver</label>
                            </div>
                        </fieldset>
                    </div>
                </div>
                <div class="pnl js-hidden" id="panel-message-3">
                    <div class="form-group">
                        <label for="message-1">
                            <span class="form-text">Reason for rejecting (optional)</span>
                            <span class="form-hint">Any text you supply will be emailed to Shirley Robertson and stored in the audit </span>
                        </label>
                        <textarea rows="3" class="form-control" id="message-1"></textarea>
                    </div>
                </div>
                <div class="form-group">
                    <a href="" class="button">Save</a>
                </div>
            </div>
        </div>
        <%}%>%>
    </div>

</div>
