<div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">
        <h1 class="govuk-heading-xl">
            Review service changes
        </h1>
        <p class="govuk-body-l">Please review these details before saving</p>

        <dl class="govuk-summary-list">

            <div class="govuk-summary-list__row">
                <dt class="govuk-summary-list__key">
                    User
                </dt>
                <dd class="govuk-summary-list__value">
                    <%=locals.user.firstName%> <%=locals.user.lastName%>
                </dd>
            </div>

            <div class="govuk-summary-list__row">
                <dt class="govuk-summary-list__key">
                    Organisation
                </dt>
                <dd class="govuk-summary-list__value">
                    <%=locals.organisationDetails.organisation.name%>
                </dd>
            </div>

            <div class="govuk-summary-list__row">
                <dt class="govuk-summary-list__key">
                    Service
                </dt>
                <dd class="govuk-summary-list__value">
                    <%= locals.service.name%>
                </dd>
            </div>
            <div class="govuk-summary-list__row">
                <dt class="govuk-summary-list__key">
                    Roles
                </dt>
                <dd class="govuk-summary-list__value">
                    <% if (locals.roles.length > 0) { %>
                        <%=locals.roles.name%>
                        <% for (let i = 0; i < locals.roles.length; i++) { %>
                            <% const role = locals.roles[i]; %>
                            <%=role.name%> <br>
                        <% } %>
                    <% } else { %>
                        No roles selected
                    <% }%>
                </dd>
            </div>

        </dl>

        <form method="post">
            <input type="hidden" name="_csrf" value="<%= csrfToken %>"/>
            <div class="govuk-button-group">
                <button type="submit" class="govuk-button">Save</button>
                <a href="<%= locals.cancelLink %>" class="govuk-button govuk-button--secondary">Cancel</a>
            </div>
        </form>

    </div>
</div>
